<Tela1>:
    Button:
        text: "Botao 1"
        #esse botao toma 10 % da tela
        size_hint: .1, .1
        #esse botao esta posicionado na pos x = 0 y = 80%
        pos_hint:{"x": 0, "y": 0.8}

    Button:
        text: "Botao 2"
        #esse botao toma 20 % da tela
        size_hint: .2, .2
        #esse botao esta posicionado no centro da tela
        pos_hint:{"center_x": .5, "center_y": .5}

    Button:
        text: "Botao 3"
        #esse botao toma 10 % da tela
        size_hint: .1, .1
        #esse botao esta posicionado na base (y) e no canto direito onde direita vale 100%
        pos_hint:{"y": 0, "right": 1.0}

    Button:
        text: "Botao 4 pos absoluto"
        #removemos as proporções do tamanho do botao
        size_hint: None, None
        #posicionamos em relação ao centro vertical em 70%
        pos_hint:{"center_y": .7}
        #posicionamos da esquerda pra direita a 150 pixels
        x: 150
        #definimos a largura como sendo 200 pixels
        width: 200
        #definimos a altura como sendo 100 pixels
        height: 100
